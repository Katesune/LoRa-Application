<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_choose"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckQRCodeActivity"
    android:background="@color/app_color">

    <Button
        android:id="@+id/backbutt"
        android:layout_gravity="left"
        android:layout_width="300px"
        android:layout_height="160px"
        android:layout_marginTop="80px"
        android:paddingTop="3dp"

        android:background="@drawable/backbutt"

        android:onClick="gotoChooseActivity"/>

    <Button
        android:id="@+id/message"
        android:layout_gravity="center_horizontal"
        android:layout_width="600px"
        android:layout_height="195px"
        android:layout_marginTop="80px"
        android:paddingTop="3dp"

        android:background="@drawable/skanning"/>

</LinearLayout>